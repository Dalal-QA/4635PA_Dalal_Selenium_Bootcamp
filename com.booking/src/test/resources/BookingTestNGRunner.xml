<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Booking" verbose="1" >

    <listeners>
        <listener class-name="listeners.AnnotationTransformer"/>
    </listeners>

    <parameter name="browser" value="chrome"/>
    <parameter name="url" value="http://booking.com"/>
    <test name="BAT">
        <classes>
            <class name="test_registration.TestRegistration"/>
            <class name="test_searchflight.TestSearchFlight"/>
            <class name="test_searchhotel.TestSearchHotel"/>
            <class name="test_switchlanguage.TestSwitchLanguage"/>
            <class name="test_radiobuttons.TestRadioButtons"/>
            <class name="test_filterthesearchflight.TestFilterSearchFlight"/>


        </classes>
    </test>

</suite>
